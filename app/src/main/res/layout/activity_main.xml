<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8E2E2"
    android:orientation="vertical"
    android:visibility="visible">



    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="351dp"
        android:background="#B99BE4"></CalendarView>

    <TextView
        android:id="@+id/selectedDay"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FAB2CA"
        android:gravity="center"
        android:textColor="@color/black" />
    <LinearLayout
        android:id="@+id/dayContent"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/saveTextButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#B99BE4"
            android:text="@string/SAVE"
            android:textColor="#272727"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/textInput"
            android:background="#F8E2E2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:autofillHints=""
            android:textSize="20dp"
            android:hint="@string/write_something"
            android:inputType="textShortMessage|none"
            android:textColor="@color/black" />
    </LinearLayout>


</LinearLayout>